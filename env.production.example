# Production Environment Configuration
# Copy this file to .env.production and fill in your actual values

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DATABASE_URL="postgresql://username:password@host:port/database"
SUPABASE_URL="https://your-project.supabase.co"
SUPABASE_ANON_KEY="your-supabase-anon-key"
SUPABASE_SERVICE_ROLE_KEY="your-supabase-service-role-key"

# =============================================================================
# AUTHENTICATION
# =============================================================================
NEXTAUTH_SECRET="your-nextauth-secret-key"
NEXTAUTH_URL="https://your-domain.com"
JWT_SECRET="your-jwt-secret-key"

# =============================================================================
# AI SERVICES
# =============================================================================
OPENAI_API_KEY="your-openai-api-key"
ELEVEN_LABS_API_KEY="your-eleven-labs-api-key"
COQUI_TTS_API_KEY="your-coqui-tts-api-key"

# =============================================================================
# MEDIA SERVICES
# =============================================================================
CLOUDINARY_CLOUD_NAME="your-cloudinary-cloud-name"
CLOUDINARY_API_KEY="your-cloudinary-api-key"
CLOUDINARY_API_SECRET="your-cloudinary-api-secret"

# =============================================================================
# EXTERNAL APIs
# =============================================================================
YOUTUBE_API_KEY="your-youtube-api-key"
FREESOUND_API_KEY="your-freesound-api-key"
JAMENDO_API_KEY="your-jamendo-api-key"

# =============================================================================
# ANALYTICS & MONITORING
# =============================================================================
GOOGLE_ANALYTICS_ID="G-XXXXXXXXXX"
MIXPANEL_TOKEN="your-mixpanel-token"
SENTRY_DSN="https://your-sentry-dsn"
LOGFLARE_API_KEY="your-logflare-api-key"

# =============================================================================
# NOTIFICATIONS
# =============================================================================
FIREBASE_PROJECT_ID="your-firebase-project-id"
FIREBASE_PRIVATE_KEY="your-firebase-private-key"
FIREBASE_CLIENT_EMAIL="your-firebase-client-email"

# =============================================================================
# PERFORMANCE & CACHING
# =============================================================================
REDIS_URL="redis://localhost:6379"
UPSTASH_REDIS_REST_URL="https://your-upstash-redis-url"
UPSTASH_REDIS_REST_TOKEN="your-upstash-redis-token"

# =============================================================================
# SECURITY
# =============================================================================
CORS_ORIGIN="https://your-domain.com"
RATE_LIMIT_WINDOW_MS="900000"
RATE_LIMIT_MAX_REQUESTS="100"

# =============================================================================
# FEATURE FLAGS
# =============================================================================
ENABLE_AI_FEATURES="true"
ENABLE_SENSOR_INTEGRATION="true"
ENABLE_SOCIAL_FEATURES="false"
ENABLE_OFFLINE_MODE="true"

# =============================================================================
# MOBILE APP CONFIGURATION
# =============================================================================
MOBILE_APP_ID="com.mobii.app"
MOBILE_APP_NAME="Mobii"
MOBILE_APP_VERSION="1.0.0"

# =============================================================================
# SAMSUNG A25 SENSOR INTEGRATION
# =============================================================================
SAMSUNG_HEALTH_API_KEY="your-samsung-health-api-key"
SAMSUNG_HEALTH_API_SECRET="your-samsung-health-api-secret"
SENSOR_UPDATE_INTERVAL="1000"
SENSOR_DATA_RETENTION_DAYS="30"

# =============================================================================
# DEPLOYMENT CONFIGURATION
# =============================================================================
NODE_ENV="production"
VERCEL_URL="https://your-vercel-url.vercel.app"
VERCEL_PROJECT_ID="your-vercel-project-id"
VERCEL_ORG_ID="your-vercel-org-id"

# =============================================================================
# DEVELOPMENT OVERRIDES (for testing)
# =============================================================================
# Uncomment these lines for development/testing
# DATABASE_URL="postgresql://localhost:5432/mobii_dev"
# NEXTAUTH_URL="http://localhost:3000"
# CORS_ORIGIN="http://localhost:3000"
